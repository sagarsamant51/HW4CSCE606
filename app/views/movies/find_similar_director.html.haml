%table#movies
  %thead
    %tr
      %th Movie title
      %th Rating
      %th Release Date
      %th Director
      %th More Info
  %tbody
    - @movies_list.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)